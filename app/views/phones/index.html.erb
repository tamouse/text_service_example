<div class="container-fluid">
  <div class="card">
    <div class="card-header">
      <h1 class="card-title">Phones</h1>
    </div>
    <div class="card-body">
      <p class="card-text">Phones that have sent messages.</p>

      <table class="table">
        <thead>
          <tr>
            <th>Id</th>
            <th>Number</th>
            <th>Status</th>
            <th>Msg Count</th>
            <th>First Used</th>
            <th>Last Updated</th>
          </tr>
        </thead>
        <tbody>
          <% @phones.each do |phone| %>
            <tr>
              <td><%=phone.id %></td>
              <td><%=phone.number %></td>
              <td><%=phone.status %></td>
              <td><%=phone.messages.count %></td>
              <td><%=l phone.created_at, format: :short %></td>
              <td><%=l phone.updated_at, format: :short %></td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="4">&nbsp;</td>
          </tr>
        </tfoot>
      </table>
      <%= render "layouts/coming_soon" %>
    </div>
  </div>
</div>
